const { createServer } = require('hapi-admin')
const Database = require('./config/database');

const init = async () => {
    const visibleProperties ={
        createdAt:{isVisible:{create:false,show:true,list:true}},
        updatedAt:{isVisible:{create:false,show:true}}
    }
    const adminResources = [
    ];
    const server = await createServer({
       admin:{resources:adminResources}
    })
    
    Database.connect();

    await server.register([
    ]);

    await server.start();
    console.log('Listening on %s', server.info.uri);

}

init();