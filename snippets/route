const <ControllerNameCapitalized>Controller = require('../controllers/<ControllerNameLowered>_controller');

exports.plugin = {
    name:'<ControllerNameLowered>',
    register: async function(server, options={}) {
        const prefix = options.prefix || ''
        const config = options.apiConfig || {}
        server.route({method: 'GET', path: `${prefix}/<RouteNameLowered>`,  options:{...config},handler: <ControllerNameCapitalized>Controller.getAll });
        server.route({method: 'GET', path: `${prefix}/<RouteNameLowered>/{id}`,  options:{...config},handler: <ControllerNameCapitalized>Controller.findById });
        server.route({method: 'POST', path: `${prefix}/<RouteNameLowered>`, options:{...config},handler: <ControllerNameCapitalized>Controller.create });
        server.route({method: 'PATCH', path: `${prefix}/<RouteNameLowered>/{id}`, options:{...config},handler: <ControllerNameCapitalized>Controller.edit });
        server.route({ method: 'DELETE', path: `${prefix}/<RouteNameLowered>/{id}`, options:{...config},handler: <ControllerNameCapitalized>Controller.delete });

    }
}