const <ControllerNameCapitalized>Controller = require('../controllers/<ControllerNameLowered>_controller');

exports.plugin = {
    pkg: require('../package.json'),
    register: async function(server, options) {
        const prefix = options.prefix || ''
        const config = options.confg || {}
        server.route({method: 'GET', path: `${prefix}/<RouteNameLowered>`,  config:{...config},handler: <ControllerNameCapitalized>Controller.getAll });
        server.route({method: 'GET', path: `${prefix}/<RouteNameLowered>/{id}`,  config:{...config},handler: <ControllerNameCapitalized>Controller.findById });
        server.route({method: 'POST', path: `${prefix}/<RouteNameLowered>`, config:{...config},handler: <ControllerNameCapitalized>Controller.create });
        server.route({method: 'PATCH', path: `${prefix}/<RouteNameLowered>/{id}`, config:{...config},handler: <ControllerNameCapitalized>Controller.edit });
        server.route({ method: 'DELETE', path: `${prefix}/<RouteNameLowered>/{id}`, config:{...config},handler: <ControllerNameCapitalized>Controller.delete });

    }
}